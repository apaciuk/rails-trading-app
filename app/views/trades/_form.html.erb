<%= simple_form_for(@trade) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <% if @trade.errors.any? %>
      <div class="errors">
        <p><%= @trade.errors.count %> Prevented this trade from saving</p>
        <ul>
          <% @trade.errors.full_messages.each do |msg| %>
            <li><%= msg  %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

       <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_area :title, class: 'form-control' %>

  </div>
         <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  
     


  
      <div class="form-group">
        <%= f.input :images, as: :file,  input_html: { multiple: true, direct_upload: true }, label: false, wrapper: false %>
      </div>



  <%= f.button :submit, class: 'btn btn-primary mt-4 mb-3' %>
<% end %>

