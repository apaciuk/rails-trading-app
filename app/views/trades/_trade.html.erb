<div class="card">
  <div class="card-img-top">
  <%= link_to image_tag(trade.images.first.variant(resize: "640x480")), trade %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= trade.title %></h5>
    <p class="card-text"><%= truncate(trade.description, length: 120) %></p>
   <div class="float-left">
    <figure class="img-fluid">
     <%= gravatar_for(trade.user, size: 96) %>
    </figure>
    <div class="card-footer text-muted">
     <p><%= trade.user.name %></p>
     <p><time>posted <%= time_ago_in_words(trade.created_at) %> ago</time></p>
    </div>
   </div>
  </div>
</div>